<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="#FFFCEF">

        <TextView
            android:id="@+id/txt_smk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SMK NEGERI 4 BANDUNG"
            android:textStyle="bold"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_smk"
            android:text="2019 - 2020"
            android:textSize="30dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_centerVertical="true"/>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#FFF7B2"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/txt_klmpk"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kelompok PWPB :"
            android:textSize="25dp"
            android:textStyle="italic"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/txt_rifky"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_klmpk"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="Rifky Zikriansyah Budiman (26)"/>
        <TextView
            android:id="@+id/txt_sulthon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_rifky"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="Sulthon Auliya Nur Huda  (31)"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="#FFFCEF">

        <TextView
            android:id="@+id/txt_kelas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XII"
            android:textStyle="bold"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_kelas"
            android:text="REKAYASA PERANGKAT LUNAK"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_centerVertical="true"/>



    </RelativeLayout>





</LinearLayout>

