<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFCEF"
    tools:context=".Main2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Dashboard"
            android:textColor="#ffff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginRight="280dp"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/logo_awal"
        android:layout_marginBottom="300dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:src="@drawable/student1" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/btnAwal1"
        android:layout_width="220dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/logo_awal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/stylebutton1"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/image1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_archive_black_24dp"/>

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/image1"
            android:text="LIHAT DATA"
            android:textColor="#fff"
            android:textSize="17dp"
            android:textStyle="bold" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/btnAwal2"
        android:layout_width="220dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/btnAwal1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/stylebutton2"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/image2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_add_box_black_24dp"/>

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/image2"
            android:text="INPUT DATA"
            android:textColor="#fff"
            android:textSize="17dp"
            android:textStyle="bold" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/btnAwal3"
        android:layout_marginTop="15dp"
        android:layout_width="220dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/btnAwal2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/stylebutton3"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/image3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_info_black_24dp"/>

        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/image3"
            android:text="INFORMASI"
            android:textColor="#fff"
            android:textSize="17dp"
            android:textStyle="bold" />

    </RelativeLayout>





</androidx.constraintlayout.widget.ConstraintLayout>